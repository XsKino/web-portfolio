---
import Avatar from '@components/header/Avatar.astro'
import Title from '@components/header/Title.astro'
import Socials from '@components/header/Socials.astro'
import { getI18n } from '@/src/i18n'

import type { SocialLink } from '@/src/types/app'

interface Props {
  name: string
  titles: string[]
  socialLinks: SocialLink[]
}

const { name, titles, socialLinks } = Astro.props
const i18n = getI18n(Astro.currentLocale)
---

<header
  id={i18n.SECTIONS.ID.HOME}
  class='min-h-[100vh] flex flex-col items-center justify-center px-10 w-screen max-w-screen-2xl'>
  <div class='flex flex-col md:flex-row gap-8 pt-12 w-full items-center'>
    <div class='flex gap-4 md:hidden'>
      <Socials links={socialLinks} />
    </div>
    <div class='md:flex-1 flex md:justify-end'>
      <Avatar class='size-96 aspect-square md:size-[30rem]' />
    </div>
    <div class='md:flex-1 w-full flex flex-col justify-center gap-4 min-w-max'>
      <Title name={name} titles={titles} />
      <div class='hidden md:flex gap-4'>
        <Socials links={socialLinks} />
      </div>
    </div>
  </div>
  <div class='text-center p-8 md:py-24 text-lg'>
    <slot />
  </div>
</header>
